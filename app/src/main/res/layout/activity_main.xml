<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        tools:context=".MainActivity">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                 android:id="@+id/frameLayout7">
        <android.support.v7.widget.AppCompatImageView android:id="@+id/background_top"
                                                      android:layout_width="match_parent"
                                                      android:layout_height="match_parent"
                                                      android:src="@drawable/background_top"
                                                      android:tint="@color/lavender"/>
    </FrameLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <android.support.v7.widget.AppCompatImageView android:id="@+id/background_bottom"
                                                      android:layout_width="match_parent"
                                                      android:layout_height="match_parent"
                                                      android:src="@drawable/background_bottom"
                                                      android:tint="@color/fervidity"/>

    </FrameLayout>
    <TextView
            android:text="12018\n04 03"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/date_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/hour_text"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@id/hour_text" android:layout_marginBottom="40dp"/>
    <TextView
            android:text="7"
            android:textSize="137sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hour_text"
            app:layout_constraintEnd_toStartOf="@+id/minute_text" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="130dp"
            android:textColor="@android:color/white" app:layout_constraintStart_toEndOf="@id/date_text"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="34"
            android:textSize="137sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/minute_text"
            app:layout_constraintStart_toEndOf="@+id/hour_text" android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/hour_text"
            android:textColor="@android:color/white" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.v7.widget.AppCompatImageView android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:src="@drawable/fog"
                                                  app:layout_constraintEnd_toStartOf="@id/temperature_text"
                                                  app:layout_constraintBottom_toBottomOf="@id/temperature_text"
                                                  android:layout_marginEnd="16dp"
                                                  android:layout_marginBottom="20dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="nevum 21,5"
              android:textColor="@android:color/white"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:id="@+id/temperature_text"
              android:layout_marginTop="10dp"
              android:layout_marginEnd="24dp"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/temperature_button"
            android:text="doni ko des frodeni testos"
            app:layout_constraintTop_toBottomOf="@id/temperature_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="0dp"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:textColor="@color/colorPrimary"
            style="?android:attr/borderlessButtonStyle"/>
    <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 android:layout_marginStart="24dp"
                 android:layout_marginTop="24dp"
    android:visibility="gone"
    android:id="@+id/main_progress_bar"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textColor="@android:color/white"
              app:layout_constraintBottom_toTopOf="@id/sunny_image"
              app:layout_constraintStart_toStartOf="@id/lemona_button"
              android:text="doni ko" android:layout_marginBottom="20dp" android:layout_marginStart="16dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textColor="@android:color/white"
              app:layout_constraintBottom_toTopOf="@id/bulb_image"
              app:layout_constraintStart_toStartOf="@id/buvi_button"
              android:text="keli" android:layout_marginBottom="20dp" android:layout_marginStart="16dp"/>
    <View android:layout_width="2dp" android:layout_height="170dp"
          android:id="@+id/barrier1"
          app:layout_constraintStart_toEndOf="@id/schedule_image"
          app:layout_constraintEnd_toStartOf="@id/bulb_image"
          app:layout_constraintTop_toTopOf="@id/sunny_image"
          app:layout_constraintBottom_toBottomOf="@id/sunny_image"
          android:background="@android:color/white"/>
    <View android:layout_width="2dp" android:layout_height="170dp"
          android:id="@+id/barrier2"
          app:layout_constraintStart_toEndOf="@id/file_add_image"
          app:layout_constraintEnd_toStartOf="@id/recent_list"
          app:layout_constraintTop_toTopOf="@id/sunny_image"
          app:layout_constraintBottom_toBottomOf="@id/sunny_image"
          android:background="@android:color/white"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/sunny_image"
               android:src="@drawable/sunny_day"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toStartOf="@id/schedule_image" android:layout_marginTop="400dp"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/schedule_image"
               app:layout_constraintStart_toEndOf="@id/sunny_image"
               app:layout_constraintEnd_toStartOf="@id/barrier1"
               app:layout_constraintTop_toTopOf="@id/sunny_image"
               android:src="@drawable/schedule"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/bulb_image"
               app:layout_constraintStart_toEndOf="@id/barrier1"
               app:layout_constraintEnd_toStartOf="@id/task_list_image"
               app:layout_constraintTop_toTopOf="@id/sunny_image"
               android:src="@drawable/bulb"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/task_list_image"
               app:layout_constraintStart_toEndOf="@id/bulb_image"
               app:layout_constraintEnd_toStartOf="@id/file_add_image"
               app:layout_constraintTop_toTopOf="@id/sunny_image"
               android:src="@drawable/task_list"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/file_add_image"
               app:layout_constraintStart_toEndOf="@id/task_list_image"
               app:layout_constraintEnd_toStartOf="@id/barrier2"
               app:layout_constraintTop_toTopOf="@id/sunny_image"
               android:src="@drawable/file_add"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/lemona_button"
            android:text="lemona"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/sunny_image"
            app:layout_constraintEnd_toStartOf="@id/lurina_button"
            app:layout_constraintStart_toStartOf="@id/sunny_image"
            android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            style="?android:attr/borderlessButtonStyle"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/lurina_button"
            app:layout_constraintTop_toTopOf="@id/lemona_button"
            app:layout_constraintStart_toEndOf="@id/lemona_button"
            android:text="lurina"
            android:minWidth="0dp"
            android:textColor="@color/colorPrimary"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            app:layout_constraintEnd_toEndOf="@id/sunny_image"
            style="?android:attr/borderlessButtonStyle"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/brema_button"
            android:text="brema"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/schedule_image"
            app:layout_constraintStart_toStartOf="@id/schedule_image"
            app:layout_constraintEnd_toEndOf="@id/schedule_image"
            style="?android:attr/borderlessButtonStyle"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/buvi_button"
            app:layout_constraintTop_toBottomOf="@id/bulb_image"
            app:layout_constraintEnd_toStartOf="@id/mavi_button"
            app:layout_constraintStart_toStartOf="@id/bulb_image"
            android:text="buvi"
            android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:textColor="@color/colorPrimary"
            style="?android:attr/borderlessButtonStyle"
    />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/mavi_button"
            app:layout_constraintTop_toTopOf="@id/buvi_button"
            app:layout_constraintStart_toEndOf="@id/buvi_button"
            app:layout_constraintEnd_toEndOf="@id/bulb_image"
            android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="mavi"
            android:textColor="@color/colorPrimary"
            style="?android:attr/borderlessButtonStyle"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/vidina_button"
            android:text="vidina"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/task_list_image"
            app:layout_constraintStart_toStartOf="@id/task_list_image"
            app:layout_constraintEnd_toEndOf="@id/task_list_image"
            style="?android:attr/borderlessButtonStyle"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/marina_button"
            android:text="marina"
            app:layout_constraintTop_toBottomOf="@id/file_add_image"
            app:layout_constraintEnd_toStartOf="@id/marisa_button"
            app:layout_constraintStart_toStartOf="@id/file_add_image"
            android:textColor="@color/colorPrimary"
            android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            style="?android:attr/borderlessButtonStyle"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/marisa_button"
            android:text="marisa"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="@id/marina_button"
            app:layout_constraintStart_toEndOf="@id/marina_button"
            app:layout_constraintEnd_toEndOf="@id/file_add_image"
            android:minWidth="0dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            style="?android:attr/borderlessButtonStyle"/>
    <ListView android:layout_width="270dp" android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@id/barrier2"
              app:layout_constraintTop_toTopOf="@id/barrier2"
              app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/recent_list"/>
</android.support.constraint.ConstraintLayout>